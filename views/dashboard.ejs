<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Progreso de Estudiantes</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container mt-5">
    <h2 class="mb-4">ğŸ“Š Progreso de Estudiantes</h2>
    <form class="row g-3 mb-4" onsubmit="return redirigir(event)">
      <div class="col-auto">
        <input type="text" name="codigo" class="form-control" placeholder="CÃ³digo de estudiante" required>
      </div>
      <div class="col-auto">
        <button type="submit" class="btn btn-primary">ğŸ” Buscar</button>
      </div>
    </form>

<form class="row g-3 mb-4" onsubmit="return redirigirGrupo(event)">
  <div class="col-auto">
    <select name="grupo" class="form-select" id="grupo">
      <option disabled selected>Selecciona un grupo</option>
      <% grupos.forEach(g => { %>
        <option value="<%= g %>"><%= g %></option>
      <% }) %>
    </select>
  </div>
  <div class="col-auto">
    <button type="submit" class="btn btn-success">ğŸ“š Filtrar por grupo</button>
  </div>
</form>

    <table class="table table-bordered table-striped">
      <thead class="table-dark">
        <tr>
          <th>Nombre</th>
          <th>CÃ³digo</th>
          <th>Grupo</th>
          <% preguntas.forEach(p => { %>
            <th><%= p %></th>
          <% }); %>
          <th>Puntaje</th>
        </tr>
      </thead>
      <tbody>
        <% data.forEach(est => { %>
          <tr>
            <td><%= est.nombre %></td>
            <td><%= est.codigo %></td>
            <td><%= est.grupo %></td>
            <% preguntas.forEach(p => { %>
              <td><%= est.respuestas[p] || "-" %></td>
            <% }); %>
            <td><%= est.puntaje %> / <%= est.total %></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>

  <script>
  function redirigir(e) {
    e.preventDefault();
    const codigo = e.target.elements.codigo.value.trim();
    if (codigo) {
      window.location.href = "/dashboard/estudiante/" + codigo;
    }
    return false;
  }

  function redirigirGrupo(e) {
    e.preventDefault();
    const grupo = document.getElementById("grupo").value;
    if (grupo && grupo !== "Selecciona un grupo") {
      window.location.href = "/dashboard/grupo/" + grupo;
    }
    return false;
  }
</script>

</body>
</html>